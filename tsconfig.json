{
  "compilerOptions": {
    "pretty": true,
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "lib": [
      "es5",
      "dom",
      "es2015.promise",
      "es2015.core",
    ],
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
      "test/*": ["test/*"],
    },
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
  },
  "include": [
    "src",
    "typings/sha256.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
